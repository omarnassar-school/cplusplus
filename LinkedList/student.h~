#ifndef student_h
#define student_h

#include <iostream>
#include <cstring>

using namespace std;

class Student {
 public:
  Student();
  char* getFirst();
  void setFirst(char*);
  char* getLast();
  void setLast(char*);
  int ID();
  void setID(int);
  float GPA();
  void setGPA(float);
  Student* getStudent();
 private:
  char* first;
  char* last;
  int ID;
  float GPA;
  Student* student;
};

#endif
